{% extends 'LightCMSCoreBundle:Backend:layout.html.twig' %}

{% form_theme form 'LightCMSCoreBundle:Form:theme.html.twig' %}

{% block body %}
    {{ form_start(form) }}

    <section class="content-header">
        <h1>
            {% if entity.created %}
                {{ entity.name }}
            {% else %}
                Create Folder
            {% endif %}

            <div class="pull-right">
                <div class="btn-group" style="margin-right:20px">
                    {{ form_row(form.submit) }}
                </div>
                <div class="btn-group" style="margin-right:20px">
                    <a href="{{ lcmspath('media', 'media', 'dashboard', {}) }}" class="btn btn-default">Back</a>
                </div>
            </div>
        </h1>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Folder informations</h3>
            </div>
            <div class="box-body">
                {{ form_row(form.name) }}
                {{ form_row(form.parent) }}
            </div>
        </div>
    </section>

    {{ form_end(form) }}
{% endblock %}

