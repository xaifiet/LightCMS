<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Light CMS{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                '@bootstrap_css'
                '%kernel.root_dir%/../vendor/components/font-awesome/css/font-awesome.css'
                'bundles/lightcmscore/css/frontend.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% javascripts
                '@jquery'
                '@jqueryui'
                '@bootstrap_js'
                'bundles/lightcmscore/js/frontend.js'
                'bundles/lightcmscore/js/bind.jquery.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
