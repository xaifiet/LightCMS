{% block fieldgroup_row %}
    {% spaceless %}
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ form.vars.label }}</h3>
            </div>
            <div class="box-body">
                {{ form_widget(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock %}

{% block form_row %}
    {% spaceless %}
        <div class="form-group">
            {{ form_label(form) }}
            {{ form_widget(form) }}
        </div>
    {% endspaceless %}
{% endblock %}

{% block entity_widget %}
    {% spaceless %}
        <div class="input-group input-group-sm">
            <input type="hidden" id="{{ form.vars.id }}" />
            <input type="text" class="form-control">
            <span class="input-group-btn">
                <button class="btn btn-info btn-flat" type="button" data-toggle="modal" data-target="#{{ form.vars.id }}-modal">Select Parent</button>
            </span>
        </div>

        {{ render(controller('LightCMSNodeBundle:Node:tree', { 'style': 'modal', 'idmodal': form.vars.id ~ '-modal' })) }}
    {% endspaceless %}
{% endblock %}

{% block html_widget %}
    {% spaceless %}
        <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    {% endspaceless %}
{% endblock %}