{% block html_widget %}
    {% spaceless %}
        <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
        <script type="text/javascript">
            tinymce.init({
                selector: "#{{ form.vars.id }}",
                theme: "modern",
                plugins: [
                    ["advlist charmap link image pagebreak lists preview  anchor textcolor "],
                    [" code insertdatetime media spellchecker visualblocks code"],
                    ["table paste directionality colorpicker hr lists wordcount"]
                ],
                add_unload_trigger: false,
                schema: "html5",
                menubar: false,
                toolbar: "styleselect forecolor backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | anchor link image | table | spellchecker",
                statusbar: false
            });
        </script>
    {% endspaceless %}
{% endblock %}