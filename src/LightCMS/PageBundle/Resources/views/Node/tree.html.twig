{% for entity in entities %}
    <li>
        <div class="treetoggle" >
            {% if entity.children|length > 0 %}
                <i class="fa fa-angle-right treetoggle" data-bind="click{showHideTree()}"></i>
            {% endif %}
        </div>
        {% if entity.getInheritanceType() == 'page' %}
            <i class="glyphicon glyphicon-file"></i>
        {% elseif entity.getInheritanceType() == 'site' %}
            <i class="glyphicon glyphicon-globe"></i>
        {% endif %}
        <a href="{{ lcmspath('node', entity.getInheritanceType(), 'edit', {'id': entity.id}) }}">{{ entity.name }}</a>
        {% if entity.children|length > 0 %}
            <ul style="display: none;">
                {% include 'LightCMSPageBundle:Node:tree.html.twig' with {'entities': entity.children} %}
            </ul>
        {% endif %}
    </li>
{% endfor %}
