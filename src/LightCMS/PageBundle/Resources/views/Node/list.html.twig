{% extends 'LightCMSCoreBundle:Backend:layout.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Nodes List
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        Add Node
                        <span class="fa fa-caret-down"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ lcmspath('node', 'site', 'create', {}) }}">Site</a></li>
                        <li><a href="{{ lcmspath('node', 'page', 'create', {}) }}">Image</a></li>
                    </ul>
                </div>
                <div class="btn-group" style="margin-right:20px">
                    <div class="pull-right" style="width: 300px">
                        <div class="input-group">
                            <span class="input-group-addon">Filter</span>
                            <input id="filter" type="text" class="form-control" placeholder="Type here..." data-bind="ready{setFocus()}|keyup{filter()}">
                        </div>
                    </div>
                </div>
            </div>
        </h1>
    </section>

    <section class="content">

        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px">#</th>
                                <th>name</th>
                                <th style="width: 50px">children</th>
                                <th style="width: 100px">Action</th>
                            </tr>
                        </thead>
                        <tbody class="searchable">
                            {% for node in nodes %}
                                <tr>
                                    <td></td>
                                    <td>
                                        <a href="{{ lcmspath('node', 'node', 'dashboard', {'id': node.id }) }}">{{ node.name }}</a>
                                    </td>
                                    <td>{{ node.children|length }}</td>
                                    <td>
                                        <a class="btn-sm btn-info" href="{{ lcmspath('node', node.getInheritanceType(), 'edit', {'id': node.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                                        <a class="btn-sm btn-danger" href="{{ lcmspath('node', 'node', 'delete', {'id': node.id }) }}"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}